generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                String      @id @default(cuid())
  externalId        String      @unique @map("external_id")
  name              String
  description       String?
  price             Int
  images            String[]
  category          String
  isActive          Boolean     @default(true)
  stock             Int         @default(0)
  lowStockThreshold Int         @default(5) @map("low_stock_threshold")
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  orderItems        OrderItem[]

  // Optimized indexes for filtering/searching
  @@index([category])
  @@index([isActive])
  @@index([isActive, category, price])
  @@index([isActive, createdAt(sort: Desc)]) // Sort optimization
  @@index([isActive, category, createdAt(sort: Desc), id(sort: Desc)], map: "Product_isActive_category_createdAt_id_idx")
  @@index([isActive, createdAt(sort: Desc), id(sort: Desc)], map: "Product_isActive_createdAt_id_idx")
  @@index([name(ops: raw("gin_trgm_ops"))], type: Gin, map: "Product_name_trgm_idx")
}

model Customer {
  id        String   @id @default(cuid())
  userId    String?  @unique
  name      String
  phone     String   @unique
  email     String?
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]

  @@index([phone])
  @@index([userId])
}

model Order {
  id              String      @id @default(cuid())
  total           Int
  status          String      @default("PENDING")
  userId          String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  customerId      String
  notes           String?
  shippingAddress String
  shippingName    String
  shippingPhone   String
  customer        Customer    @relation(fields: [customerId], references: [id])
  items           OrderItem[]
  // NOTE: trigram search indexes are represented here to prevent Prisma
  // migrate drift and are also created by SQL hardening migration.

  @@index([userId])
  @@index([status])
  @@index([customerId])
  @@index([createdAt])
  @@index([createdAt(sort: Desc), id(sort: Desc)], map: "Order_createdAt_id_idx")
  @@index([status, createdAt(sort: Desc), id(sort: Desc)], map: "Order_status_createdAt_id_idx")
  @@index([id(ops: raw("gin_trgm_ops"))], type: Gin, map: "Order_id_trgm_idx")
  @@index([shippingName(ops: raw("gin_trgm_ops"))], type: Gin, map: "Order_shippingName_trgm_idx")
  @@index([shippingPhone(ops: raw("gin_trgm_ops"))], type: Gin, map: "Order_shippingPhone_trgm_idx")
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Int
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}
